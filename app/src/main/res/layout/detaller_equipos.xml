<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_empty_equipos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/msg_sin_equipos"
        android:textColor="@color/bluetextligth"
        android:textSize="17sp"
        android:layout_gravity="center_vertical"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/txt_moto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_motobomba"
            android:textColor="@color/bluetextligth"
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_filt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_filt"
            android:textColor="@color/bluetextligth"
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txt_moto_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_na"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_filt_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_na"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txt_cale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_cale"
            android:textColor="@color/bluetextligth"
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_dosi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_dosi"
            android:textColor="@color/bluetextligth"
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txt_cale_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_na"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_dosi_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_na"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
