<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_dureza"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/cristalingreencincokg" />

    <TextView
        android:textSize="@dimen/title_size"
        android:id="@+id/txt_dureza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_dureza"
        android:textColor="@color/bluetextligth"
        android:gravity="center"/>

    <TextView
        android:textSize="@dimen/content_size"
        android:id="@+id/txt_dureza_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="condiciones"/>


    <TextView
        android:textSize="@dimen/content_size"
        android:id="@+id/lbl_recomendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Recomendación"/>

    <TextView
        android:textSize="@dimen/content_size"
        android:id="@+id/txt_dureza_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="valor recomendacion"/>



    <ImageView
        android:id="@+id/iv_std"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/alcalosdiezkg" />

    <TextView
        android:textSize="@dimen/title_size"
        android:id="@+id/txt_std"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bluetextligth"
        android:text="@string/lbl_std"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:textSize="@dimen/content_size"
        android:id="@+id/txt_std_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="condiciones"/>

    <TextView
        android:textSize="@dimen/content_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Recomendación"/>


    <TextView
        android:textSize="@dimen/content_size"
        android:id="@+id/txt_std_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>



</LinearLayout>
