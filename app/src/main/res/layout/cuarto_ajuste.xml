<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_dureza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/lbl_dureza"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_dureza_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="condiciones"/>


    <TextView
        android:id="@+id/lbl_recomendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Recomendación"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_dureza_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="valor recomendacion"/>

    <TextView
        android:id="@+id/txt_std"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/lbl_std"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_std_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="condiciones"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Recomendación"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/txt_std_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>



</LinearLayout>
