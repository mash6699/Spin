<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/iv_desinfeccion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/acidetunkg" />

    <TextView
        android:textSize="@dimen/title_size"
        android:id="@+id/txt_desinfectante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bluetextligth"
        android:text="Desinfectante"
        android:gravity="center"/>

    <TextView
        android:textSize="@dimen/content_size"
        android:id="@+id/txt_desinfectante_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="condiciones"/>

    <TextView
        android:textSize="@dimen/content_size"
        android:id="@+id/lbl_recomendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Recomendación"/>

    <TextView
        android:textSize="@dimen/content_size"
        android:id="@+id/txt_desinfectante_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>


    <ImageView
        android:id="@+id/iv_estabilizador"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/cristalingreencincokg" />

    <TextView
        android:textSize="@dimen/title_size"
        android:id="@+id/txt_estab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bluetextligth"
        android:text="Estabilizador"
        android:gravity="center"/>

    <TextView
        android:textSize="@dimen/content_size"
        android:id="@+id/txt_estab_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="condiciones"/>

    <TextView
        android:textSize="@dimen/content_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Recomendación"/>

    <TextView
        android:textSize="@dimen/content_size"
        android:id="@+id/txt_estab_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>


    <ImageView
        android:id="@+id/iv_shock"       android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/shockcincokg" />

    <TextView
        android:textSize="@dimen/title_size"
        android:id="@+id/txt_shock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/bluetextligth"
        android:text="Shock Preventivo"
        android:gravity="center"/>

    <TextView
        android:textSize="@dimen/content_size"
        android:id="@+id/txt_shock_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="condiciones"/>

    <TextView
        android:textSize="@dimen/content_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Recomendación"/>

    <TextView
        android:textSize="@dimen/content_size"
        android:id="@+id/txt_shock_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>



</LinearLayout>
