<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/ed_diametroGrande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/lbl_diametro_g"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/ed_radioGrande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/lbl_radio_g"
                android:inputType="numberDecimal"
                android:enabled="false"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/ed_diametroChico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/lbl_diametro_c"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/ed_radioChico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/lbl_radio_c"
                android:inputType="numberDecimal"
                android:enabled="false"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</LinearLayout>
