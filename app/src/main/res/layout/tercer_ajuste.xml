<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardUseCompatPadding="true" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_desinfectante"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/title_desinfectante"
                    android:gravity="center"
                    android:textSize="@dimen/title_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/iv_desinfectante"
                    android:paddingBottom="5dp"
                    android:text="Desinfectante"/>

                <TextView
                    android:id="@+id/lbl_description_desinfectante"
                    android:textSize="@dimen/content_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_desinfectante"
                    android:layout_toRightOf="@+id/iv_desinfectante"
                    android:text="Descripci贸n"
                    android:textColor="#8b8b8b" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:visibility="visible"
            android:id="@+id/cv_cloramidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardUseCompatPadding="true" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_desinfectante_cloramidas"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/title_desinfectante_cloramidas"
                    android:textSize="@dimen/title_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/iv_desinfectante_cloramidas"
                    android:paddingBottom="5dp"
                    android:text="Desinfectante "/>

                <TextView
                    android:id="@+id/lbl_description_desinfectante_cloramidas"
                    android:textSize="@dimen/content_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_desinfectante_cloramidas"
                    android:layout_toRightOf="@+id/iv_desinfectante_cloramidas"
                    android:text="Descripci贸n"
                    android:textColor="#8b8b8b" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardUseCompatPadding="true" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_estabilizador"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/cristalingreencincokg" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/title_estabilizador"
                    android:textSize="@dimen/title_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/iv_estabilizador"
                    android:paddingBottom="5dp"
                    android:text="Estabilizador" />

                <TextView
                    android:id="@+id/lbl_description_estabilizador"
                    android:textSize="@dimen/content_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_estabilizador"
                    android:layout_toRightOf="@+id/iv_estabilizador"
                    android:text="Descripci贸n"
                    android:textColor="#8b8b8b" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardUseCompatPadding="true" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="8dp">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_shock"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/shockcincokg" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/title_shockpreventivo"
                    android:textSize="@dimen/title_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/iv_shock"
                    android:paddingBottom="5dp"
                    android:text="Shock Preventivo" />

                <TextView
                    android:id="@+id/lbl_description_shockpreventivo"
                    android:textSize="@dimen/content_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_shockpreventivo"
                    android:layout_toRightOf="@+id/iv_shock"
                    android:text="Descripci贸n"
                    android:textColor="#8b8b8b" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>
