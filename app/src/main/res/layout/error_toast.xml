<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_toast_gradient"
    android:padding="5dp"
    android:minWidth="250dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgErrorToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:contentDescription="Error"
        android:src="@drawable/notice_error_icon" />
    
    <TextView
        android:id="@+id/txtErrorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/imgErrorToast"
        android:text="Error" />
    
    <TextView
        android:id="@+id/txtErrorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtErrorTitle"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgErrorToast"
        android:text="Error" />

    

</RelativeLayout>
