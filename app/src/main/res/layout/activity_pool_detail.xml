<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    style="@style/AppTheme"
    tools:context="mx.spin.mobile.PoolDetailActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <TextView
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/lbl_nombre_piscina"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/txt_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volumen"
                        android:textColor="@color/bluetextligth"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_volumen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27 ft"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_tipo_instalacion"
                        android:textColor="@color/bluetextligth"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_instalacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PÃºblica"
                        android:textSize="16sp"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/lbl_uso_piscina"
                android:textColor="@color/bluetextligth"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_tipo_spa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_na"
                android:textSize="16sp"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/txt_empty_equipos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/msg_sin_equipos"
                android:textColor="@color/bluetextligth"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:gravity="center" />



            <TextView
                android:id="@+id/txt_moto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/lbl_motobomba"
                android:textColor="@color/bluetextligth"
                android:textSize="13sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_moto_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_na"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_filt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/lbl_filt"
                android:textColor="@color/bluetextligth"
                android:textSize="13sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_filt_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_na"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_cale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/lbl_cale"
                android:textColor="@color/bluetextligth"
                android:textSize="13sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_cale_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_na"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_dosi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/lbl_dosi"
                android:textColor="@color/bluetextligth"
                android:textSize="13sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_dosi_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_na"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

              <!--  <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:onClick="goAnalize"
                    android:text="@string/lbl_btn_analizar" />-->

                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="21dp"
                    card_view:cardElevation="6dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <Button
                        android:id="@+id/btn_analizar"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/lbl_btn_analizar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:padding="12dp"
                        android:textColor="@android:color/holo_blue_dark"/>/>

                </android.support.v7.widget.CardView>


              <!--  <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:onClick="goBitacora"
                    android:text="@string/lbl_btn_bitacora" />-->

                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="21dp"
                    card_view:cardElevation="6dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <Button
                        android:id="@+id/btn_bitacora"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/lbl_btn_bitacora"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:padding="12dp"
                        android:textColor="@android:color/holo_blue_dark"/>/>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
